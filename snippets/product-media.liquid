{% case media.media_type %}
    {% when 'image' %}
        <img src="{{ media | image_url: 'large' }}" alt="{{ media.preview_image.alt }}" width="{{ media.preview_image.width }}" height="{{ media.preview_image.height }}" class="w-full h-full object-cover" loading="lazy">

    {% when 'external_video' %}
        {{ media | external_video_tag: class: 'w-full h-80 object-cover' }}

    {% when 'video' %}
        {{ media | video_tag: controls: true, class: 'w-full h-full object-cover' }}

    {% when 'model' %}
        {{ media | model_viewer_tag: controls: true, class: 'w-full h-full object-cover' }}

    {% else %}
        {{ media | media_tag }}

{% endcase %}
